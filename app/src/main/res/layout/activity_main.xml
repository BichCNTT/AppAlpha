<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/image_main"
    tools:context="com.example.ominext.app.MainActivity">
    <Button
        android:id="@+id/button_alpha"
        android:background="@mipmap/clou"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="chữ cái"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="190dp"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"

        android:background="@drawable/image_view_style" />

    <Button
        android:id="@+id/button_phrase"
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:text="cụm từ"
        android:textAllCaps="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/home"
            android:background="@mipmap/home"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp" />

        <Button
            android:background="@mipmap/next"
            android:id="@+id/button_next"
            android:layout_marginLeft="190dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
